<!DOCTYPE html>
<html>

	<head>
		<title>更新导演</title>
		<meta name='referrer' content='no-referrer'></meta>
		<Link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
		<Link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
		<Link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
		<Link rel='stylesheet' href='/admin-lte/dist/css/AdminLTE.min.css' />
		<Link rel='stylesheet' href='/admin-lte/dist/css/skins/skin-blue.min.css' />
		<Link rel='stylesheet' href='/stylesheets/style.css' />

	</head>
	<style>
	</style>

	<body class="hold-transition skin-blue sidebar-mini">

		<div class="wrapper">
			<%- include('./header.ejs') %>
			<%- include('./menu.ejs') %>
			<!-- Content Wrapper. Contains page content -->
			<div class="content-wrapper">
				<!-- Content Header (Page header) -->
				<section class="content-header">
					<h1>
       		 			更新导演
      				</h1>
					<ol class="breadcrumb">
						<li>
							<a href="#"><i class="fa fa-dashboard"></i> Level</a>
						</li>
						<li class="active">Here</li>
					</ol>
				</section>

				<!-- Main content -->
				<section class="content">

					<!-- Your Page Content Here -->
					<div class="box box-info">
			            <div class="box-header with-border">
			            	<h3 class="box-title">Horizontal Form</h3>
			            </div>
			            <!-- /.box-header -->
			            <!-- form start -->
			            <form class="form-horizontal" method='post' action='/undateDirectorAction'>
			             	<div class="box-body">
				                <div class="form-group">
				                	<label for="directorID" class="col-sm-2 control-label">导演id</label>
				
					                <div class="col-sm-10">
					                	<input type="text" class="form-control" readonly value="<%= id %>" id="directorID" placeholder="导演id" name='id'>
					                </div>
			                	</div>
				                <div class="form-group">
				                  	<label for="directorName" class="col-sm-2 control-label">导演姓名</label>
				
				                  	<div class="col-sm-10">
				                    	<input type="text" class="form-control" id="directorName" value="<%= name %>" name="name" placeholder="导演姓名">
				                  	</div>
				                </div>
			              		<div class="form-group">
				                  	<label for="directorAvatars" class="col-sm-2 control-label">导演头像</label>
				
				                  	<div class="col-sm-10">
				                    	<input type="url" class="form-control" value="<%= img %>" id="directorAvatars" name="img" placeholder="导演头像">
				                  	</div>
				                </div>
				                <div class="form-group">
				                  	<label for="directorAlt" class="col-sm-2 control-label">alt</label>
				
				                  	<div class="col-sm-10">
				                    	<input type="url" class="form-control" value="<%= alt %>" id="directorAlt" name="alt" placeholder="alt">
				                  	</div>
				                </div>
			              
			              
			              	</div>
			              <!-- /.box-body -->
			              	<div class="box-footer">
			                	<div class="form-group">
				                  	<label for="directorAlt" class="col-sm-2 control-label sr-only" >alt</label>
				
				                  	<div class="col-sm-10">
				                    	<input type="submit" class="btn btn-info" value="更新"></input>
				                  	</div>
				                </div>
			                	
			                	
			              	</div>
			              	<input type="text" value="<%= skipNum %>" name='skipNum' />
			              	<input type="text" value="<%= limitNum %>" name='limitNum' />
			              <!-- /.box-footer -->
			            </form>
			        </div>
				

				</section>
				<!-- /.content -->
			</div>
			<!-- /.content-wrapper -->

			<%- include('./footer.ejs') %>
			<%- include('./sidebar.ejs') %>

		</div>
		<!-- ./wrapper -->

	</body>
	<script src="/javascripts/jquery.min.js"></script>
	<script src="/bootstrap/js/bootstrap.min.js"></script>
	<script src="/javascripts/app.min.js"></script>
	<script>
		
	
		
	</script>
</html>